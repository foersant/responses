{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "strict": true,
    "target": "ES2015",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "rootDir": "src"
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
